@model IEnumerable<VehicleServiceViewModel>

<div class="table-wrapper">
    <div class="table-box">

        <h2 class="text-center mb-4">Vehicle Services</h2>

        <table class="table table-striped table-hover">
            <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>City</th>
                <th>Address</th>
                <th>Created On</th>
                <th>Contact</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var service in Model)
            {
                <tr>
                    <td>@service.Name</td>
                    <td>@service.City</td>
                    <td>@service.Address</td>
                    <td>@service.CreatedOn.ToString("dd.MM.yyyy")</td>
                    <td>
                        <div>@service.Email</div>
                        <div>@service.Phone</div>
                    </td>
                </tr>
            }
            </tbody>
        </table>

    </div>
</div>