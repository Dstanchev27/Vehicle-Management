@model IEnumerable<EditViewModel>

<div class="table-wrapper">
    <div class="table-box">

        <div class="d-flex justify-content-start mb-3">
            <a asp-controller="Management"
               asp-action="AddService"
               class="btn btn-sm btn-primary">
                Create New Service
            </a>
        </div>

        <h2 class="text-center mb-4">Creating Vehicle Services</h2>

        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>City</th>
                <th>Address</th>
                <th>Created On</th>
                <th>Email</th>
                <th>Phone</th>
                <th class="text-center action-col"></th>
                <th class="text-center action-col"></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var service in Model)
            {
                <tr>
                    <td class="fw-semibold text-break">@service.Name</td>
                    <td>@service.City</td>
                    <td class="text-break">@service.Address</td>
                    <td>@service.CreatedOn.ToString("dd.MM.yyyy")</td>

                    <td class="text-break contact-email">
                        <a href="mailto:@service.Email" class="text-decoration-none">@service.Email</a>
                    </td>

                    <td class="contact-phone">
                        <a href="tel:@service.Phone" class="text-decoration-none">@service.Phone</a>
                    </td>

                    <td class="text-center action-col">
                        <a asp-controller="Management"
                           asp-action="EditService"
                           asp-route-id="@service.Id"
                           class="btn btn-sm btn-outline-primary me-1">
                            Edit
                        </a>
                    </td>

                    <td class="text-center action-col">
                        <button type="button"
                                class="btn btn-sm btn-danger btn-delete-service"
                                data-bs-toggle="modal"
                                data-bs-target="#deleteServiceModal"
                                data-service-id="@service.Id"
                                data-service-name="@service.Name">
                            Delete
                        </button>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>


<div class="modal fade" id="deleteServiceModal" tabindex="-1" aria-labelledby="deleteServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteServiceModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the service "<span id="serviceName"></span>"?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteServiceForm" asp-controller="Management" asp-action="DeleteService" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="serviceId" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/manageServices.js" asp-append-version="true"></script>
}