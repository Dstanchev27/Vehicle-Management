<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VMAPP.Web</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/VMAPP.Web.styles.css" asp-append-version="true" />
    <link href="~/datatables/css/datatables.bootstrap4.css" rel="stylesheet" />
    <link href="~/datatables/css/jquery.datatables.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <header class="vmapp-header-fixed">
        <nav class="navbar navbar-expand-sm vmapp-header border-bottom">
            <div class="container-fluid">

                <a asp-controller="Home" asp-action="Index">
                    <img id="header-image"
                         src="~/img/VMAPP_header_photo.png"
                         alt="VMAPP Logo" />
                </a>

                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link buttons-color-header"
                               asp-controller="Home"
                               asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link buttons-color-header"
                               asp-controller="Home"
                               asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link buttons-color-header"
                               asp-controller="Management"
                               asp-action="Index">Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link buttons-color-header"
                               asp-controller="VehicleServiceCars"
                               asp-action="Index">Vehicle Services</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="vmapp-content container">
        @RenderBody()
    </main>

    <footer class="vmapp-footer-fixed text-center text-muted">
        <div class="container footer-text-color">
            &copy; 2026 - VMAPP -
            <a class="footer-text-color"
               asp-controller="Home"
               asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/datatables/js/jquery.datatables.js"></script>
    <script src="~/datatables/js/datatables.bootstrap4.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
