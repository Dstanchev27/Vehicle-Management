@model VMAPP.Web.Models.VehicleServiceCars.EditVehicleViewModel
@using VMAPP.Data.Models.Enums

<link rel="stylesheet" href="~/css/addVehicle.css" asp-append-version="true" />

<div class="table-wrapper">
    <div class="table-box">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="mb-0">Edit Vehicle</h2>
        </div>

        <div class="card add-vehicle-card">
            <div class="card-body">
                <form asp-controller="VehicleServiceCars" asp-action="EditVehicle" method="post" class="row g-3">
                    @Html.AntiForgeryToken()

                  
                    <input asp-for="ServiceName" type="hidden" />
                    <input asp-for="ServiceId" type="hidden" />
                    <input asp-for="VehicleId" type="hidden" />

                    <div class="col-md-6">
                        <label asp-for="VIN" class="form-label"></label>
                        <input asp-for="VIN" class="form-control" />
                        <span asp-validation-for="VIN" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CarBrand" class="form-label"></label>
                        <input asp-for="CarBrand" class="form-control" />
                        <span asp-validation-for="CarBrand" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CarModel" class="form-label"></label>
                        <input asp-for="CarModel" class="form-control" />
                        <span asp-validation-for="CarModel" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="CreatedOnYear" class="form-label"></label>
                        <input asp-for="CreatedOnYear" type="number" class="form-control" step="1" min="1886" max="2100" />
                        <span asp-validation-for="CreatedOnYear" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Color" class="form-label"></label>
                        <input asp-for="Color" class="form-control" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="VehicleType" class="form-label"></label>
                        <select asp-for="VehicleType" class="form-select" asp-items="Html.GetEnumSelectList<VehicleType>()"></select>
                        <span asp-validation-for="VehicleType" class="text-danger"></span>
                    </div>

                    <div class="col-12 d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Save changes</button>
                        <a asp-controller="VehicleServiceCars" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}